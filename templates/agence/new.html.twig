{% extends 'base.html.twig' %}

{% block title %}Nouvelle Agence{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-6">
        <div class="bg-white shadow-md rounded-lg p-6">
            <div class="mb-6">
                <h1 class="text-2xl font-bold text-gray-900">Cr√©er une nouvelle agence</h1>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div class="grid grid-cols-1 gap-6">
                    <div class="form-group">
                        {{ form_label(form.adresse) }}
                        {{ form_widget(form.adresse) }}
                        {% if form_errors(form.adresse) %}
                            <div class="mt-1 text-red-500 text-sm">
                                {{ form_errors(form.adresse) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.telephone) }}
                        {{ form_widget(form.telephone) }}
                        {% if form_errors(form.telephone) %}
                            <div class="mt-1 text-red-500 text-sm">
                                {{ form_errors(form.telephone) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="flex items-center justify-start space-x-3 mt-6">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded-md inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Enregistrer
                    </button>
                    <a href="{{ path('app_agence_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-2 rounded-md inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Retour
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 
